  </div>

  <div>
    <%= form.label :especie, style: "display: block" %>
    <%= form.text_field :especie %>
  </div>

  <div>
    <%= form.label :raza, style: "display: block" %>
    <%= form.text_field :raza %>
  </div>

  <div>
    <%= form.label :fechanacimiento, style: "display: block" %>
    <%= form.text_field :fechanacimiento %>
  </div>

  <div>
    <%= form.label :notas, style: "display: block" %>
    <%= form.text_field :notas %>
  </div>

  <div>
    <%= form.label :client_id, style: "display: block" %>
    <select name="pet[client_id]" id="pet_client_id">
      <option value="-1" selected >Seleccione un due√±o</option>
        <% @clients.each do |client| %>
          <option value="<%= client.id %>"> <%= client.id %> - <%= client.nombre %> <%= client.apellido %>  </option>
